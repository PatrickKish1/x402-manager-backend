# Backend API Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
# Supabase PostgreSQL connection string
# Get this from your Supabase project settings > Database > Connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres
# Alternative: Use Supabase-specific env var
SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Analytics Configuration
ANALYTICS_CACHE_TTL=300
ANALYTICS_CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

